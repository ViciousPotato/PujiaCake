extends member_index

block title
  注册

block content
  #register-form
    h1 注册
    p.login 已经是会员？
      a(href='/member/login') 登录
      .
    form(action='/member/register', method='post')
      div
        label(for="") 邮箱
          abbr(title='必填')*
        input#email(type="text", name='email')

      div
        label(for="") 密码
          abbr(title='必填')*
        input#password(type="password", name='password')

      div
        label(for="") 再输一遍密码
          abbr(title='必填')*

      div
        input#repassword(type="password", name='repassword')

      h5(style="margin-top: 8px") 送货信息
      hr(style="margin: 5px 0")

      div
        label 姓名
        input#name(type="text", name="name")

      div
        label 地址
        input#address(type="text", name="address")

      div
        label 手机号
        input#phone(name="phone")

      div
        label 邮政编码
        input#zip(name="zip")

      div
        label 送货方式
        select#delivery-method(name="delivery-method")
          option(value="express", selected)快递
          option(value="sf")顺丰

      .tos
        ul
          li
            label.agree_label(for='agree_tos')
              input#agree_tos(type='checkbox')
              我同意
              a(href='#') 注册条款

      input(type="submit", value="注册") 