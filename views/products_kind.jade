extends products

block content
  case kind
    when 'cakes'
      h3 蛋糕
    when 'candies'
      h3 糖果
    when 'chocalates'
      h3 巧克力
      
  p.breadcrumbs
    a(href='/products') 返回产品列表

    ul#product-list
      - each product in products
        li
          a.m(href='/products/#{product.kind}/#{product.id}')
            img(src='#{product.image}', alt='#{product.name}')
            h4 #{product.name}
          p.origin-price
            | 原价
            span ￥#{product.price}
          p.member-price
            | 会员价
            span ￥#{product.memberPrice}
          p.unit
            | 规格
            span #{product.weight}g/#{product.unit}
          p.view
            a(href='/cart/add/#{product._id}')
              span.img 添加到购物车
