extends main

block title
  if user != null
    会员空间
  else
    登录

block sidebar
  if user != null
    欢迎#{user.email}
  else
    style
      #login-form {
        font-size: 13px;
      }

      #login-form .loginlabel {
        width: 90px;
        text-align: right;
        float: left;
        height: 26px;
        line-height: 26px;
      }

      #login-form input {
        width: 155px;
        height: 20px;
        margin-bottom: 3px;
      }

      #login-form .loginsubmit {
        height: 26px;
        border: 1px solid rgb(206, 28, 41);
        background-color: rgb(206, 28, 41);
        color: white;
        font-size: 13px;
      }

      #login-form .loginextra p {
        font-size: 10px;
        margin-bottom: 0px;
        margin-top: 0px;
        color: gray;
      }

    form#login-form(action='/member/login', method='post')
      div
        label.loginlabel(for='email') 会员名
        input#email(name='email')
      div
        label.loginlabel(for='email') 密码
        input#password(name='password')
      div
      input.loginsubmit(type='submit', value='登录')
      div.loginextra
        p 忘记密码？
          a(href='/member/lostpass')点此
          找回
      div.otherlogin

    hr
    #register-notice
      p 还不是会员？
        a(href='/member/register')注册