extends products

block content
  style
    .row-image {
      width: 200px;
      float: left;
    }
    .row-detail {
      width: 200px;
      float: left;
      margin-top: 25px;
    }
  .header
    h4 #{product.name}
    p.breadcrumbs
      a(href='/products') 返回产品列表

  #product-list
    .row-image
      img.product-image(src='#{product.image}', alt='#{product.name}')
    .row-detail
      p.origin-price
        | 原价
        span ￥#{product.price}
      p.member-price
        | 会员价
        span ￥#{product.memberPrice}
      p.unit
        | 规格
        span #{product.weight}g/#{product.unit}
      .buy
        p.view(style="position: relative")
          a(href='#{product.buyLink}')
            span.img 添加到购物车
  hr
  .detail
    !{product.detail}
    