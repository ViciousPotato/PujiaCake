extends admin

block content
  style
    #comment-grid {
        margin-top: 20px;
    }
  table#comment-grid.table.table-bordered.datagrid
      thead
        tr
          th
            span.datagrid-header-title 留言列表
            .datagrid-header-left
            .datagrid-header-right
              .input-append.search
                input.input-medium(type='text', placeholder='Search')
                button.btn
                  i.icon-search
                button.btn#add-new-member
                  i.icon-plus-sign
      tfoot
        tr
          th
            .datagrid-footer-left(style='display: none;')
              .grid-controls
                span
                  span.grid-start
                  | -
                  span.grid-end
                  | of
                  span.grid-count
                select.grid-pagesize
                  option 10
                  option 20
                  option 50
                  option 100
                span Per Page
            .datagrid-footer-right(style='display: none;')
              .grid-pager
                button.btn.grid-prevpage
                  i.icon-chevron-left
                span Page
                .input-append.dropdown.combobox
                  input.span1(type='text')
                  button.btn(data-toggle='dropdown')
                    i.caret
                  ul.dropdown-menu
                span
                  | of
                  span.grid-pages
                button.btn.grid-nextpage
                  i.icon-chevron-right

  script
    $.get('/admin/list_comments', function(data) {
        var dataSource = new StaticDataSource({
          columns : [
            { property: 'name',    label: '姓名',   sortable : true }, 
            { property: 'email',   label: 'Email', sortable : true },
            { property: 'phone',   label: '电话',   sortable : true },
            { property: 'enquiry', label: '留言',   sortable : true }
          ],
          data : data,
          delay : 200
        });

        $('#comment-grid').datagrid({
          dataSource : dataSource,
          cellrenderfunc : function(row, prop) {
              return '<a href="#" class="member-' + prop + '" data-pk="' + row._id + 
                     '" data-url="/admin/update_comment" data-name="' + prop + '">' + 
                     row[prop] + '</a>';
          }
        });

       
      });